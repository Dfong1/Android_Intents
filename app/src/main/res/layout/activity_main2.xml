<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/blue"
    >

    <TextView
        android:id="@+id/miapp"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="Mi App!"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:id="@+id/LinearUno"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@+id/miapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Intents de forma implicita"
            android:textSize="30dp"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/ButtonUno"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Boton 1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/LinearUno"
            app:layout_constraintEnd_toEndOf="@+id/LinearUno"
            />
        <Button
            android:id="@+id/ButtonDos"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Abrir SIIA"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/LinearUno"
            app:layout_constraintEnd_toEndOf="@+id/LinearUno"
            app:layout_constraintTop_toBottomOf="@+id/ButtonUno"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearDos"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@+id/LinearUno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Intents de forma explicita"
            android:textSize="30dp"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/ButtonTres"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Abrir Correo"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/LinearDos"
            app:layout_constraintEnd_toEndOf="@+id/LinearDos"
            />
        <Button
            android:id="@+id/telefono"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Abrir el telefono"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/LinearUno"
            app:layout_constraintEnd_toEndOf="@+id/LinearUno"
            app:layout_constraintTop_toBottomOf="@+id/ButtonUno"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>